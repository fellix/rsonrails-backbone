<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h3>Adicionar um novo produto</h3>
</div>
<div class="modal-body">
  <form>
    <fieldset>
      <div class="control-group">
        <label for="name">Nome</label>

        <div class="controls">
          <input type="text" id="name">
        </div>
      </div>

      <div class="control-group">
        <label for="description">Descrição</label>

        <div class="controls">
          <textarea id="description" rows="3" class="span6"></textarea>
        </div>
      </div>

      <div class="control-group">
        <label for="contact_email">E-mail de contato</label>

        <div class="controls">
          <input type="email" id="contact_email">
        </div>
      </div>
    </fieldset>
  </form>
</div>
<div class="modal-footer">
  <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">Fechar</a>
  <a href="#" id="commit" class="btn btn-primary">Salvar</a>
</div>
